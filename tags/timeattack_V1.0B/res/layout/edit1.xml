<?xml version="1.0" encoding="utf-8"?>

<TableLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:minWidth="250dip">
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name" android:id="@+id/label_name"></TextView><EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/name" android:hint="Name" android:selectAllOnFocus="true" android:lines="1" android:inputType="text"></EditText><RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/datelayout"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/label_date" android:text="@string/date" android:layout_marginTop="15dip"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/label_date" android:id="@+id/date" android:text="2010-01-01" android:layout_marginTop="15dip"></TextView>
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/date" android:layout_alignParentRight="true"><Button android:layout_height="wrap_content" android:layout_toRightOf="@+id/date" android:text="-" android:id="@+id/date_dec" android:layout_width="fill_parent" android:layout_weight="1"></Button><Button android:layout_height="wrap_content" android:id="@+id/date_inc" android:text="+" android:layout_toRightOf="@+id/date_dec" android:layout_alignParentRight="true" android:layout_width="fill_parent" android:layout_weight="1"></Button></LinearLayout>


</RelativeLayout><TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
	android:id="@+id/titles">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/hours"
		></TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/minutes"
		></TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/seconds"
		></TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/delta"
		></TextView>
	

</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
	android:id="@+id/pluses" android:visibility="gone">
		<Button
			android:layout_height="wrap_content"
			android:text="+"
			android:id="@+id/h_inc"
			android:layout_weight="1"
			android:layout_width="wrap_content"
		></Button>
		<Button
			android:layout_height="wrap_content"
			android:text="+"
			android:id="@+id/m_inc"
			android:layout_weight="1"
			android:layout_width="wrap_content"
		></Button>
		<Button
			android:layout_height="wrap_content"
			android:text="+"
			android:id="@+id/s_inc"
			android:layout_width="fill_parent"
			android:layout_weight="1"
		></Button>
		<Button
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:id="@+id/d_inc"
		android:text="+5"></Button>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
	android:id="@+id/values">
		<EditText
			android:layout_height="wrap_content"
			android:id="@+id/h"
			android:hint="h"
			android:text="0"
			android:layout_weight="1"
			android:layout_width="fill_parent" android:selectAllOnFocus="true" android:inputType="number" android:maxLength="2"></EditText>
		<EditText
			android:layout_height="wrap_content"
			android:hint="m"
			android:id="@+id/m"
			android:layout_weight="1"
		android:layout_width="fill_parent" android:selectAllOnFocus="true" android:maxLength="2" android:inputType="number" android:text="0"></EditText>
		<EditText
			android:layout_height="wrap_content"
			android:hint="s"
			android:id="@+id/s"
			android:layout_weight="1"
		android:layout_width="fill_parent" android:selectAllOnFocus="true" android:maxLength="2" android:inputType="number" android:text="0"></EditText>
		<EditText
			android:layout_height="wrap_content"
			android:text="0"
			android:layout_weight="1"
			android:id="@+id/d"
		android:layout_width="fill_parent" android:selectAllOnFocus="true" android:maxLength="5" android:inputType="numberSigned"></EditText>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
	android:id="@+id/minuses" android:visibility="gone">
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="-"
			android:id="@+id/h_dec"
			android:layout_weight="1"
		></Button><Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="-"
	android:id="@+id/m_dec"
	android:layout_weight="1"
></Button><Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="-"
	android:id="@+id/s_dec"
	android:layout_weight="1"
></Button><Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:id="@+id/d_dec"
android:text="-5"></Button>
</TableRow><TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="10dip"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cancel" android:layout_weight="1" android:text="@string/cancel"></Button><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ok" android:layout_weight="1" android:text="@string/ok"></Button></TableRow>


</TableLayout>
